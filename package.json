{
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/env": "^5.0.1",
    "@fastify/mongodb": "^5.0.0",
    "fastify": "^5.1.0",
    "fastify-cli": "^7.0.1",
    "fastify-mongodb": "^4.2.0"
  },
  "scripts": {
    "start": "fastify start -l info --options app.js",
